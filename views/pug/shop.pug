extends layout/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://dictionary.cambridge.org/pt/images/thumb/book_noun_001_01679.jpg?version=5.0.376", alt="A Book")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description A great book full of wisdom
                        div.card__actions
                            button.btn Add to Cart
        else
            h1 No products found.